<!--miniprogram/pages/bathingOrder/bathingOrder.wxml-->
<view>
  <top-assembly inner-text="预约洗护"></top-assembly>
  <view class="content">
      <scroll-view scroll-y="true" style="height: 100%;">
              <view class="item" bindtap="details" wx:for="{{bathingOrder}}" wx:key="*this" data-id="{{item._id}}">
                <view class="item_top">
                  <view class="item_top_left">
                    <view>预约人：{{item.user_name}}</view>
                    <view>预约时间段：{{item.bath}}</view>
                  </view>
                  <view class="item_top_right">{{ item.done == 1 ?'待支付':'' }}</view>
                </view>
                <view class="item_center">
                  <image src="https://p.extrabux.top/1_1/20201216/1608108250333164.png"></image>
                  <view class="item_center_right">
                    <view>一只小狗勾</view>
                    <view>共计次数：{{item.differenceDate_cs}}</view>
                    <view class="item_center_right_money"> 
                      <view>{{item.Discount * 10}}折优惠{{item.money * item.differenceDate_cs}}</view> 
                      <view>￥{{(item.money * item.differenceDate_cs) * item.Discount}}</view>
                    </view>
                  </view>
                </view>
                <view class="item_bottom">
                  <view class="phone" catchtap="phone">电话联系</view>
                  <view class="pay" hidden="{{item.done != 1}}" catchtap="pay" data-money="{{(item.money * item.differenceDate_cs) * item.Discount}}" data-id="{{item._id}}">立即支付</view>
                </view>
              </view>
              <view class="no_records" hidden="{{!bathingOrder.length < 1}}">暂无洗护记录~</view>
        </scroll-view>
  </view>
</view>