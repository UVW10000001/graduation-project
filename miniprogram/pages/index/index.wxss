.top_box{
  position: fixed;
  height: 152rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  background: #ffffff;
  padding-top: 50rpx;
  z-index: 999;
}
.top_box_left{
  position: absolute;
  left: 20rpx;
}
.top{
  background:url("https://pic4.zhimg.com/v2-218ebd4540a1d0602f040729139c6cd5_720w.jpg?source=172ae18b");
  background-size: 100% 140%;
  width: 100%;
  height: 400rpx;
  box-shadow:0rpx -100rpx 100rpx -100rpx #000000 inset;
  padding-top: 200rpx;
}
.top1{
  display: flex;
  padding: 0 40rpx;
  align-items: center;
  justify-content: space-between;
}

.top1_left{
  display: flex;
  align-items: center;
}
.top1_left image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.top1_left_content{
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
}
.top1_left_content .more_index{
  width: 25rpx;
  height: 25rpx;
}
.content{
  width: 100%;
  /* height: 2000rpx; */
  border-top-left-radius: 34rpx;
  border-top-right-radius: 34rpx;
  margin-top: -27rpx;
  background: #ffffff56;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 30rpx;
}

.content_screen_box{
  width: 90%;
  left: 5%;
  height: 100rpx;
  background-color: #ffffff;
  position:absolute;
  
}
.content_screen_box_active{
  position: fixed;
  top: 150rpx;
  padding: 0 30rpx;
}
.content_screen{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  font-weight: 550;
  font-size: 28rpx;
  align-items: center;
  

}
.content_screen view:nth-child(2){
  color: #ff733d;
}
.content_box{
  padding-bottom: 180rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
}
.content_box_active{
  padding-top: 100rpx;
}
.content_item{
  display: flex;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.content_item_img{
  width: 271rpx;
  height: 170rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}
.content_item_right{
  display: flex;
  flex-direction: column;
  justify-content:space-around;
}
.content_item_right view:nth-child(1){
  font-weight: bold;
  color: #222222;
}
.content_item_right view:nth-child(2){
  color:#9a9a9a;
  font-size: 23rpx;
}
.content_item_right view:nth-child(3){
  font-size: 23rpx;
  background:#fef3ed;
  max-width: 106rpx;
  color: #f67744;
  display: flex;
  justify-content: center;
  align-content: center;
  border-radius: 5rpx;
}
.content_box2{
  padding-top: 200rpx;
  width: 100%;
  height: 500rpx;
  position:absolute;
  background: url("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSNg4jm_5QW3v8Il8Xt_lnR3bUfvMVbc9CSaw&usqp=CAU");
}
.content_box2_text{
  margin-top: 370rpx;
  color: #8a8a8a;
  text-align: center;
  font-size: 30rpx;
  
}
.text1{
  padding: 10rpx 20rpx ;
  text-align: center;
  background: #00ffdd00;
  line-height: 30rpx;
  font-family: "幼圆";
  font-weight: bold;
  font-size: large;
  color: black;
}
