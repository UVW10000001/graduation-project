<!-- <text>预约</text> -->
<view class="wrap">
  <!-- 开始时间 -->
  <picker mode="date" start="1995-01-01 hh:mm" end="3000-01-01 hh:mm" 
   value="{{startTime}}" bindchange="getStartTime">
     开始时间:{{startTime}}
  </picker>
   <!-- 结束时间 -->
  <!--<picker mode="date" start="1995-01-01" end="3000-01-01" 
   value="{{endTime}}" bindchange="getEndTime">
     结束时间:{{endTime}}
  </picker>-->
  <!-- 套餐类型 -->
  <input class="type" placeholder="套餐类型(A/B/C)" bindinput="getType" value="{{type}}"></input>
  <!-- 联系方式 -->
   <input class="tel" placeholder="联系方式" bindinput="getTel" value="{{tel}}"></input>
  <!-- 请假原因 -->
  <!--<view class="text">请假原因:</view>
  <textarea placeholder="请假原因" bindinput="getReson" value="{{reson}}"></textarea>-->
  <!-- 提交按钮 -->
  <view class="submit" bindtap="submit">提交</view>
</view>
