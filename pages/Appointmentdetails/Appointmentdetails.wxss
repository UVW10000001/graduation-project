/* miniprogram/pages/Appointmentdetails/Appointmentdetails.wxss */
.content{
  position: fixed;
  padding-top: 200rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
   background: url("http://n.sinaimg.cn/sinacn03/133/w640h1093/20180516/3705-hapkuvm5282834.jpg");
}
.item_center{
  padding:30rpx 20rpx;
  display: flex;
  width: 90%;
  border-radius: 100rpx;
  box-shadow:0rpx 0rpx 30rpx 0rpx;
}
.item_center_right{
  padding: 5rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item_center_right view:nth-child(1){
  font-size: 35rpx;
  font-weight: bold;
  color: rgb(228, 124, 124);
}
.item_center_right view:nth-child(2){
  font-size: 25rpx;
  color: #959595;
}
.item_center_right view:nth-child(3){
  font-size: 25rpx;
  color: #959595;
}
.item_text{
  width: 90%;
  display: flex;
  justify-content: space-between;
}
.item_title{
  margin: 30rpx 0;
  font-weight: bold;
  font-size: 28rpx;
  color: #ffffff;
}
.border_bottom{
  padding: 30rpx 0;
  border-bottom: 2rpx solid #dddddd;
}